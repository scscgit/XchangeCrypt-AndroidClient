<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7"
        android:orientation="vertical"
        >

        <!--first frame-->
        <LinearLayout
            android:id="@+id/linerlayout_order_coin_pair"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            >
            <LinearLayout
                android:id="@+id/linerlayout_order_coin_pair_sub"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="4"
                >
            <!--currency pair-->
                <LinearLayout
                    android:id="@+id/linearLayout_coin_pair_select"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    >
                    <TextView
                        android:id="@+id/first_coin_logo_text"
                        android:text="QBC"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="right|center"
                        />

                    <ImageView
                        android:id="@+id/first_coin_logo_image"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:src="@drawable/qbc_icon"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        />

                    <ImageView
                        android:id="@+id/second_coin_logo_image"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:src="@drawable/btc_icon"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        />
                    <TextView
                        android:id="@+id/second_coin_logo_text"
                        android:text="BTC"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        />

                </LinearLayout>

                <!--ballance-->
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                android:id="@+id/exchange_balance_title"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="Zostatok:"
                android:layout_marginStart="10dp"
                />

                <TextView
                android:id="@+id/exchange_balance_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Zostatok"
                />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"
                >

                    <Button
                        android:id="@+id/exchange_button_exchange_buy"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Nákup"
                        android:background="@color/orange"
                        />

                    <Button
                        android:id="@+id/exchange_button_exchange_sell"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Predaj"
                        android:background="@color/gray"
                        />

            </LinearLayout>
        </LinearLayout>

            <!--&lt;!&ndash;ballance&ndash;&gt;-->
            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:orientation="horizontal"-->
                <!--android:weightSum="3"-->
                <!--&gt;-->
                <!--<TextView-->
                    <!--android:id="@+id/exchange_balance_title"-->
                    <!--android:layout_width="70dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:text="Zostatok:"-->
                    <!--android:layout_marginStart="10dp"-->
                    <!--/>-->

                <!--<TextView-->
                    <!--android:id="@+id/exchange_balance_text"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:text="Zostatok"-->
                    <!--/>-->

            <!--</LinearLayout>-->

        <!--</LinearLayout>-->

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />

        <!--second frame-->
        <LinearLayout
            android:id="@+id/linerlayout_order_place"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="6"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/coin_order_icon"
                    />
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:text="Stanoviť ponuku"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <ImageView
                        android:id="@+id/image_up"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/up_arrow"
                    />

                    <ImageView
                        android:id="@+id/image_down"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/down_arrow"
                        />


                </LinearLayout>


            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/dotted"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="7"
                >
                <TextView
                    android:id="@+id/exchange_amount_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:text="Množstvo"
                    android:gravity="center"
                    />
                <EditText
                    android:id="@+id/exchange_amount_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:textSize="@dimen/item_text_size"
                    android:inputType="numberDecimal"
                    android:digits="0123456789.,"
                    android:ellipsize="start"
                    android:singleLine="true"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/exchange_amount_coin_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="QBC"
                    android:gravity="left|center"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/dotted"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="7"
                >
                <TextView
                    android:id="@+id/exchange_price_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:text="Cena"
                    android:gravity="center"
                    />
                <EditText
                    android:id="@+id/exchange_price_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:textSize="@dimen/item_text_size"
                    android:inputType="numberDecimal"
                    android:digits="0123456789.,"
                    android:ellipsize="start"
                    android:singleLine="true"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/exchange_price_coin_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="BTC"
                    android:gravity="left|center"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/dotted"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="7"
                >
                <TextView
                    android:id="@+id/exchange_fee_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:text="Poplatok"
                    android:gravity="center"
                    />
                <EditText
                    android:id="@+id/exchange_fee_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:textSize="@dimen/item_text_size"
                    android:inputType="numberDecimal"
                    android:digits="0123456789.,"
                    android:ellipsize="start"
                    android:singleLine="true"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/exchange_fee_coin_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="BTC"
                    android:gravity="left|center"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/dotted"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="7"
                >
                <TextView
                    android:id="@+id/exchange_sum_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:text="Spolu"
                    android:gravity="center"
                    />
                <EditText
                    android:id="@+id/exchange_sum_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:textSize="@dimen/item_text_size"
                    android:inputType="numberDecimal"
                    android:digits="0123456789.,"
                    android:ellipsize="start"
                    android:singleLine="true"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/exchange_sum_coin_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="BTC"
                    android:gravity="left|center"
                    />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            >

            <Button
                android:id="@+id/button_exchange_market"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/item_background_orange"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Market" />

            <Button
                android:id="@+id/button_exchange_limit"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/item_background_gray"
                android:gravity="center"
                android:text="Limit"
                android:enabled="false"
                android:layout_marginBottom="5dp"
                />

            <Button
                android:id="@+id/button_exchange_stop"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/item_background_gray"
                android:gravity="center"
                android:text="Stop"
                android:layout_marginBottom="5dp"
                android:enabled="false"
                />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_order_advanced"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/relative_layout_stop"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox_stop"
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textview_stop"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/checkbox_stop"
                    android:gravity="left|center"
                    android:text="STOP LOSS" />

                <EditText
                    android:enabled="false"
                    android:id="@+id/edittext_stop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/textview_stop"
                    android:layout_toRightOf="@id/checkbox_stop"
                    android:inputType="numberDecimal"
                    android:digits="0123456789.,"
                    android:ellipsize="start"
                    android:textSize="@dimen/item_text_size"
                    android:singleLine="true"
                    android:gravity="center"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_layout_profit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox_take"
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textview_profit"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/checkbox_take"
                    android:gravity="left|center"
                    android:text="TAKE PROFIT" />

                <EditText
                    android:enabled="false"
                    android:id="@+id/editext_profit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/textview_profit"
                    android:layout_toRightOf="@id/checkbox_take"
                    android:inputType="numberDecimal"
                    android:digits="0123456789.,"
                    android:ellipsize="start"
                    android:textSize="@dimen/item_text_size"
                    android:singleLine="true"
                    android:gravity="center"
                    />

            </RelativeLayout>

        </LinearLayout>


        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />
        <!--third frame-->
        <LinearLayout
            android:id="@+id/linerlayout_order_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="16"
                >
                <!--<ImageView-->
                    <!--android:layout_width="50dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:src="@drawable/order_icon"-->
                    <!--/>-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    >
                <Button
                    android:id="@+id/button_exchange_order_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TRH"
                    android:gravity="center"
                    android:background="@color/orange"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/button_exchange_order_my"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text="Moje"
                        android:textSize="@dimen/item_text_size"
                        android:gravity="center"
                        android:background="@color/gray"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="8"
                    >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Prehľad ponúk"
                    android:gravity="center"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:gravity="end"
                    >

                <ImageView
                    android:id="@+id/image_down_down"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/down_arrow"
                    android:visibility="gone"
                    />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:gravity="end"
                    >
                    <Button
                        android:id="@+id/button_exchange_graph"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:text="Graf"
                        android:textSize="@dimen/item_text_size"
                        android:background="@color/gray"
                        />
                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <ListView
                android:id="@+id/listview_orders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />
        </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>